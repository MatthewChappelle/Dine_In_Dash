<div id="profile" class="rounded-lg lg:rounded-l-lg lg:rounded-r-lg bg-white opacity-75 mx-6 lg:mx-0">
  <div class="p-4 md:p-12 text-center lg:text-left">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-2xl"><b>Login</b></h2>
        <br>
        <form class="form login-form">
          <div class="form-group">
            <label for="email-login">Email:</label>
            <input class="form-input" type="text" id="email-login" required />
          </div>
          <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-login" placeholder="********" required
              minlength="8" />
          </div>
          <div class="form-group">
            <button class="bg-green-700 hover:bg-green-900 text-white font-bold py-2 px-4 rounded-full btn btn-primary"
              type="submit">Login</button>
          </div>
        </form>
      </div>
      <br><br>
      <div class="mx-auto lg:mx-0 w-5/5 pt-3 border-b-2 border-green-500 opacity-25"></div>
      <br><br>
      <div class="col-md-6">
        <h2 class="text-2xl"><b>Signup</b></h2>
        <br>
        <form class="form signup-form">
          <div class="form-group">
            <label for="name-signup">Name:</label>
            <input class="form-input" type="text" id="name-signup" required />
          </div>
          <div class="form-group">
            <label for="email-signup">Email:</label>
            <input class="form-input" type="text" id="email-signup" required />
          </div>
          <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" type="password" id="password-signup" placeholder="********" required
              minlength="8" />
          </div>
          <div class="form-group">
            <button class="bg-green-700 hover:bg-green-900 text-white font-bold py-2 px-4 rounded-full btn btn-primary"
              type="submit">Signup</button>
          </div>
        </form>
      </div>
    </div>

    <script src="./js/login.js"></script>