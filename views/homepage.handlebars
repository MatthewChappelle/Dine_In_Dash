<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{project.id}}">{{project.dish}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">‚è≥</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount project.cooking_time}}</span>
      minute cook time!
    </p>
    <p>{{{get_rating_emoji project.rating}}} {{rating}} rating</p>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      <b>Ingredients: </b>
      {{project.ingredients}}
    </p>
    <p>
      <b>Instructions: </b>
        {{project.instructions}}
    </p>
  </div>
</div>
{{/each}}
