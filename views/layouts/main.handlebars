  <link rel="stylesheet" href="/css/style.css">
  <!-- Tailwind CSS -->
  <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
  <div class="flex flex-col justify-between">
    <header class="flex justify-between items-center p-2">
      <h1>
        <span role="img" aria-label="chef" class="text-3xl font-semibold text-gray-800">üë®‚Äçüç≥</span>
        <a href="/" class="text-3xl font-semibold text-gray-800">Cook My Recipe!</a>
      </h1>
      <nav class="flex items-center">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">Profile</a> &nbsp;|&nbsp;
        <button class="bg-sky-500 hover:bg-sky-700" id="logout">Logout &nbsp;</button>
        {{else}}
        <a href="/login">Login &nbsp;</a>
        {{/if}}
      </nav>
    </header>
    <div class="flex justify-center items-center">
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{ body }}}
      </main>
    </div>
    <footer>
      <!-- Add your footer content here -->
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>